class Doughnut {
  cook() {
    print("Dunk in the fryer.");
    this:finish("sprinkles");
  }

  finish(ingredient) {
    print("Finish with " + ingredient);
  }
}

var dnut = Doughnut;

class Cruller : dnut {
  finish(ingredient) {
    // No sprinkles, always icing.
    super:finish("icing");
  }
}

var cruller = Cruller();
print(cruller:finish());

var ac = class : Doughnut {
	finish() {
		super:finish("chocolate");
	}
};
var aci = ac();
print(aci:finish());