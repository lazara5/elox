/*
 *  Basic tests
 */

local x = 1;
local y = x + 2;
assert(y == 3);

y = y * 2;
assert(y == 6);

y = y - 2;
assert(y == 4);

y = y / 2;
assert(y == 2);

y += 4;
assert(y == 6);

y -= y;
assert(y == 0);

y += x + 1;
assert(y == 2);

y *= (4 + x);
assert(y == 10);

y /= 2;
assert(y == 5);

y %= 3;
assert(y == 2);